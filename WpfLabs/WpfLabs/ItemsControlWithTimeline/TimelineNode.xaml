<UserControl x:Class="WpfLabs.ItemsControlWithTimeline.TimelineNode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfLabs.ItemsControlWithTimeline"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Rectangle x:Name="Above" Grid.Row="0" Width="2" Fill="Red" VerticalAlignment="Stretch" />
        <Rectangle x:Name="Below" Grid.Row="1" Width="2" Fill="Red" VerticalAlignment="Stretch" />
         <Ellipse Grid.Row="0" Grid.RowSpan="2" Width="6" Height="6" Fill="Green"></Ellipse>
    </Grid>
</UserControl>
