<Window x:Class="WpfLabs.ColorfulTextBlock.ColorfulTextBlockWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfLabs.ColorfulTextBlock"
        mc:Ignorable="d"
        Title="ColorfulTextBlockWindow" Height="450" Width="800">
    <StackPanel>
        <local:ColorfulTextBlock Foreground="Red" FontSize="18" TextFormat="{Binding Text1}"
                                 InnerParam0="{Binding Param0}" ForegroundParam0="Blue" InnerParam1="{Binding Param2}"
                                 ForegroundParam1="Green" />
    </StackPanel>
</Window>