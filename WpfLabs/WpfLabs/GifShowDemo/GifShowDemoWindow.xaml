<Window x:Class="WpfLabs.GifShowDemo.GifShowDemoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        mc:Ignorable="d"
        Title="GifShowDemoWindow" Height="300" Width="300">
    <TabControl>
        <TabItem Header="普通Image">
            <Image Source="Test.gif" />
        </TabItem>
        <TabItem Header="WpfAnimatedGif">
            <Grid>
                <Image x:Name="GifImage" gif:ImageBehavior.AnimatedSource="Wizard-Clap-by-Markus-Magnusson.gif"
                       gif:ImageBehavior.AnimationCompleted="ImageBehavior_OnAnimationCompleted" />
                <Image x:Name="GifImage2" gif:ImageBehavior.AnimatedSource="Test.gif" Visibility="Collapsed"/>
            </Grid>
        </TabItem>
    </TabControl>
</Window>